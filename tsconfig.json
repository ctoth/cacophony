{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": [
      "vite/client",
      "node",
    ],
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": [
      "./src"
    ]
  },
  "exclude": [
    "node_modules",
    "src/*.test.ts",
    "src/setupTests.ts"
  ],
  "include": [
    "src/**/*.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
